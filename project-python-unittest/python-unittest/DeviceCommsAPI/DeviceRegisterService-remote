host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = DeviceRegisterService.Client(protocol)
transport.open()

if cmd == 'registerServer':
  if len(args) != 4:
    print 'registerServer requires 4 args'
    sys.exit(1)
  pp.pprint(client.registerServer(eval(args[0]),args[1],args[2],eval(args[3]),))

elif cmd == 'deregisterServer':
  if len(args) != 1:
    print 'deregisterServer requires 1 args'
    sys.exit(1)
  pp.pprint(client.deregisterServer(eval(args[0]),))

elif cmd == 'registerConnectedDevice':
  if len(args) != 2:
    print 'registerConnectedDevice requires 2 args'
    sys.exit(1)
  pp.pprint(client.registerConnectedDevice(eval(args[0]),eval(args[1]),))

elif cmd == 'deregisterDisconnectedDevice':
  if len(args) != 2:
    print 'deregisterDisconnectedDevice requires 2 args'
    sys.exit(1)
  pp.pprint(client.deregisterDisconnectedDevice(eval(args[0]),eval(args[1]),))

elif cmd == 'getDeviceServer':
  if len(args) != 1:
    print 'getDeviceServer requires 1 args'
    sys.exit(1)
  pp.pprint(client.getDeviceServer(args[0],))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

